    <main>

        <div class="banner">
            <div class="conteudo">
                <div class="banner-ti">
                    <h1>Entre para o nosso time!</h1>
                </div>
            </div>
        </div>

        <div class="quebra"></div>

        <div class="titulo">
            Cadastro:
        </div>


        <form action="/Usuario/Cadastro" method="POST">

            <div class="pppp">
                <div class="mmmm">
                    <div>
                        <label for="">Nome:
                            <br>
                            <input name="nome" type="text" placeholder="Insira seu nome..." required="true">
                        </label>
                        <br>
                        <br>
                    </div>
                    <div>
                        <label for="">Email:
                            <br>
                            <input name="email" type="email" placeholder="Insira seu e-mail" required="true">
                        </label>
                        <br>
                        <br>
                    </div>
                    <div>
                        <label for="">Senha:
                            <br>
                            <input name="senha" type="password" placeholder="Insira sua senha..." required="true">
                        </label>
                        <br>
                        <br>
                        <label for="">Repita sua senha:
                            <br>
                            <input name="confirma" type="password" placeholder="Confirme sua senha..." required="true">
                        </label>
                        <br>
                        <br>
                        <button type="submit">Enviar</button>
                        <br>
                        <br>
                        <a href="/Usuario/Login">Já possui cadastro? CLIQUE AQUI!</a>
                        <br>
                        <br>
                        @TempData["Erro"]
                        @TempData["Mensagem"]
                    </div>
                </div>
        </form>


        </div>

        <div class="quebra"></div>

        <div class="telefone">
            <h2>Telefone: (11) 3273-5000</h2>
        </div>

        <div class="baixo">
            <div class="endereco">
                <h2>Endereço: Alameda Barão de Limeira, 889 -Santa Cecília, São Paulo-SP, 01202-001</h2>
            </div>
            <div class="email">
                <h2>Email: sac@carfel.com</h2>
            </div>
        </div>

    </main>

